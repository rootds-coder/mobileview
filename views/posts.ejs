    <!-- Blog Posts List -->
    <section class="py-16 bg-gray-900">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <% if (posts && posts.length > 0) { %>
                    <% posts.forEach(function(post) { %>
                        <div class="blog-card bg-gray-800 bg-opacity-80 backdrop-filter backdrop-blur-lg rounded-lg shadow-md hover:shadow-lg transition neon-border overflow-hidden">
                            <img src="<%= post.image_url ? post.image_url : (post.image ? post.image : '/uploads/img.jpg') %>" class="w-full h-48 object-cover" alt="<%= post.title %>">
                            <div class="p-6">
                                <h5 class="text-xl font-semibold mb-2 text-magenta-400"><%= post.title %></h5>
                                <p class="text-gray-400 mb-4"><%= post.summary || '' %></p>
                                <a href="/post/<%= post.id %>" class="bg-cyan-500 text-white px-4 py-2 rounded-full hover:bg-cyan-600 transition neon-glow inline-block">Read More</a>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-span-full text-center">
                        <p class="text-lg text-gray-400">No blog posts available yet. Please check back soon!</p>
                    </div>
                <% } %>
            </div>
        </div>
    </section>

