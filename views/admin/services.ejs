<script>
// Fill Edit Service Modal with selected service data
const editServiceModal = document.getElementById('editServiceModal');
editServiceModal.addEventListener('show.bs.modal', function (event) {
    const button = event.relatedTarget;
    const id = button.getAttribute('data-id');
    const name = button.getAttribute('data-name');
    const description = button.getAttribute('data-description');
    const price = button.getAttribute('data-price');
    const icon = button.getAttribute('data-icon');
    const status = button.getAttribute('data-status');
    document.getElementById('edit-name').value = name;
    document.getElementById('edit-description').value = description;
    document.getElementById('edit-price').value = price;
    document.getElementById('edit-icon').value = icon;
    document.getElementById('edit-status').value = status;
            document.getElementById('editServiceForm').action = `/sunny/services/edit/${id}`;
});

document.getElementById('service_image_url').addEventListener('input', function(e) {
    const url = e.target.value;
    const preview = document.getElementById('serviceImageUrlPreview');
    if (url) {
        preview.innerHTML = `<img src='${url}' class='img-fluid rounded' style='max-height: 200px;'>`;
    } else {
        preview.innerHTML = '';
    }
});
</script> 