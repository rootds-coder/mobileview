<div class="d-flex justify-content-between align-items-center mb-4">
    <h5 class="mb-0">
        <i class="fab fa-youtube me-2"></i>Manage YouTube Videos
    </h5>
    <button type="button" class="btn btn-danger btn-admin" data-bs-toggle="modal" data-bs-target="#addVideoModal">
        <i class="fab fa-youtube me-2"></i>Add Video
    </button>
</div>

<div class="card">
    <div class="card-body">
        <% if (videos.length === 0) { %>
            <div class="text-center py-5">
                <i class="fab fa-youtube fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No YouTube videos found</h5>
                <p class="text-muted">Start by adding your first YouTube video.</p>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#addVideoModal">
                    <i class="fab fa-youtube me-2"></i>Add First Video
                </button>
            </div>
        <% } else { %>
            <div class="row g-4">
                <% videos.forEach(video => { %>
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100">
                            <div class="position-relative">
                                <img src="https://img.youtube.com/vi/<%= video.video_id %>/maxresdefault.jpg" 
                                     class="card-img-top" alt="<%= video.title %>" 
                                     style="height: 200px; object-fit: cover;">
                                <div class="position-absolute top-0 end-0 m-2">
                                    <span class="badge bg-danger">
                                        <i class="fab fa-youtube me-1"></i>YouTube
                                    </span>
                                </div>
                            </div>
                            <div class="card-body">
                                <h6 class="card-title"><%= video.title %></h6>
                                <p class="card-text text-muted small"><%= video.description %></p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-secondary"><%= video.category || 'General' %></span>
                                    <div class="btn-group" role="group">
                                        <a href="https://www.youtube.com/watch?v=<%= video.video_id %>" 
                                           target="_blank" class="btn btn-sm btn-outline-danger">
                                            <i class="fab fa-youtube"></i>
                                        </a>
                                        <form method="POST" action="/sunny/videos/delete/<%= video.id %>" 
                                              style="display: inline;" 
                                              onsubmit="return confirm('Are you sure you want to delete this video?')">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>
</div>

<!-- Add Video Modal -->
<div class="modal fade" id="addVideoModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fab fa-youtube me-2"></i>Add YouTube Video
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="POST" action="/sunny/videos">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="title" class="form-label">
                                    <i class="fas fa-heading me-2"></i>Video Title
                                </label>
                                <input type="text" class="form-control" id="title" name="title" required>
                            </div>
                            
                            <div class="mb-3">
                                <label for="video_id" class="form-label">
                                    <i class="fab fa-youtube me-2"></i>YouTube Video ID
                                </label>
                                <input type="text" class="form-control" id="video_id" name="video_id" 
                                       placeholder="e.g., dQw4w9WgXcQ" required>
                                <small class="text-muted">
                                    Extract the video ID from YouTube URL: https://www.youtube.com/watch?v=<strong>VIDEO_ID</strong>
                                </small>
                            </div>
                            
                            <div class="mb-3">
                                <label for="category" class="form-label">
                                    <i class="fas fa-tags me-2"></i>Category
                                </label>
                                <select class="form-control" id="category" name="category">
                                    <option value="">Select Category</option>
                                    <option value="repair">Repair Tutorials</option>
                                    <option value="flashing">Flashing Guides</option>
                                    <option value="unlocking">Unlocking Tutorials</option>
                                    <option value="tips">Tips & Tricks</option>
                                    <option value="reviews">Device Reviews</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="description" class="form-label">
                                    <i class="fas fa-align-left me-2"></i>Description
                                </label>
                                <textarea class="form-control" id="description" name="description" rows="4"></textarea>
                            </div>
                            
                            <div id="videoPreview" class="mt-3" style="display: none;">
                                <label class="form-label">Preview:</label>
                                <div class="ratio ratio-16x9">
                                    <iframe id="preview" src="" 
                                            title="Video preview" allowfullscreen></iframe>
                                </div>
                            </div>
                            
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        <i class="fas fa-info-circle me-2"></i>How to get Video ID
                                    </h6>
                                    <ol class="mb-0 small">
                                        <li>Go to your YouTube video</li>
                                        <li>Copy the URL from address bar</li>
                                        <li>Extract the part after "v="</li>
                                        <li>Example: youtube.com/watch?v=<strong>dQw4w9WgXcQ</strong></li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancel
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fab fa-youtube me-2"></i>Add Video
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
// Video preview functionality
document.getElementById('video_id').addEventListener('input', function(e) {
    const videoId = e.target.value.trim();
    const preview = document.getElementById('preview');
    const previewContainer = document.getElementById('videoPreview');
    
    if (videoId) {
        preview.src = `https://www.youtube.com/embed/${videoId}`;
        previewContainer.style.display = 'block';
    } else {
        previewContainer.style.display = 'none';
    }
});
</script> 